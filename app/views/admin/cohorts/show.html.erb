<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= "#{cohort.name} #{cohort.version}" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          Import developers
        </div>
        <div class="panel-body">
          <%= form_tag import_developers_path, multipart: true do %>
            <%= file_field_tag :file, class: "pull-left" %>
            <%= hidden_field_tag :cohort_id, cohort.id %>
            <%= submit_tag "Import", class: "pull-left" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% cohort.units.each_with_index do |unit, idx| %>
        <p><strong>
          <%= link_to "Unit #{idx}:", unit_path(unit) %></strong> <%= pretty_date(unit.start_at) %> - <%= pretty_date(unit.end_at) %></p>
      <% end %>
    </div>
    <div class="col-md-12">
      <h3>Developers</h3>
      <% cohort.developers.each do |developer| %>
        <p><%= link_to "#{developer.display_name}", developer_path(developer) %></p>
      <% end %>
    </div>
  </div>
</div>
