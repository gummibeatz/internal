<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Quality</th>
      <th>Difficulty</th>
      <th>Instructor Comm.</th>
      <th>Instructor Stim.</th>
      <th>Pace &amp; Speed</th>
      <th>Understanding</th>
      <th>Recall</th>
      <% unless comments == false %>
        <th>Comments</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% tickets.each do |t| %>
      <tr>
        <% if defined?(link) && link == true %>
          <td><%= link_to "#{pretty_date(t.submitted_at)}", exit_ticket_path(t) %></td>
        <% else %>
          <td><%= pretty_date(t.submitted_at) %></td>
        <% end %>
        <td><%= t.quality %></td>
        <td><%= t.difficulty %></td>
        <td><%= t.communication %></td>
        <td><%= t.stimulation %></td>
        <td><%= t.pace_and_speed %></td>
        <td><%= t.understanding %></td>
        <td><%= t.recall %></td>
        <% unless comments == false %>
          <td><%= t.comments %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
